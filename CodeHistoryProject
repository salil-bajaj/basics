                    .font(.largeTitle)
                    .bold()
                    .multilineTextAlignment(/*@START_MENU_TOKEN@*/.leading/*@END_MENU_TOKEN@*/)
                Spacer()
            HStack{
                Button(action:{print("Tapped on Choice")},
                label:
                {Text("Ant").font(.body).bold().multilineTextAlignment(.center).padding().border(accentColor, width: 4)}
                            )
                Button(action:{print("Tapped on Choice")},
                label:
                {Text("Beetle").font(.body).bold().multilineTextAlignment(.center).padding().border(accentColor, width: 4)}
                            )
                Button(action:{print("Tapped on Choice")},
                label:
                {Text("Moth").font(.body).bold().multilineTextAlignment(.center).padding().border(accentColor, width: 4)}
                            )
                Button(action:{print("Tapped on Choice")},
                label:
                {Text("Fly").font(.body).bold().multilineTextAlignment(.center).padding().border(accentColor, width: 4)}
                            )
                }
            }
        .foregroundColor(.white)
    }
}

}
